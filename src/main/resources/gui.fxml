<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.layout.AnchorPane?>
<BorderPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/8.0.65"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="cz.jpalcut.aos.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">

            <!-- FILE MENU -->
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem
                                fx:id="openMI"
                                onAction="#open"
                                mnemonicParsing="false"
                                text="Open"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem
                                fx:id="saveMI"
                                disable="true"
                                mnemonicParsing="false"
                                text="Save"/>
                        <MenuItem
                                fx:id="saveAsMI"
                                mnemonicParsing="false"
                                text="Save As..."/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem
                                fx:id="quitMI"
                                onAction="#quit"
                                mnemonicParsing="false"
                                text="Quit"/>
                    </items>
                </Menu>
            </menus>

            <!-- FUNCTION MENU -->
            <menus>
                <Menu mnemonicParsing="false" text="Function">
                    <items>
                        <MenuItem
                                onAction="#useFFT"
                                mnemonicParsing="false"
                                text="FFT"/>
                    </items>
                    <items>
                        <MenuItem
                                onAction="#useInverseFFT"
                                mnemonicParsing="false"
                                text="Inverse FFT"/>
                    </items>
                </Menu>
            </menus>

        </MenuBar>
    </top>


        <ImageView fx:id="imageView" layoutX="0" layoutY="25" pickOnBounds="true"/>


</BorderPane>